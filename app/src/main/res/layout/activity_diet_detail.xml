<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#8E8E93"
    android:padding="16dp">

    <TextView
        android:id="@+id/idTVPlanName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Diet Plan Name"
        android:textSize="25sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp" />

    <TextView
        android:id="@+id/idCaloriesTV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/idTVPlanName"
        android:layout_marginTop="8dp"
        android:text="Calories"
        android:textColor="@color/black"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/idDescriptionTV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/idCaloriesTV"
        android:layout_marginTop="8dp"
        android:text="Description"
        android:textColor="@color/black"
        android:textSize="16sp" />
    <!-- You can add more views here to display additional information -->
</RelativeLayout>
